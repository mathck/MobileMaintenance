<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:title="Factory Maintenance"
            android:background="?attr/colorPrimary"
            style="@style/Widget.MyApp.ActionBar" />

            <com.db.chart.view.LineChartView
                xmlns:chart="http://schemas.android.com/apk/res-auto"
                android:id="@+id/linechart"
                android:layout_below="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#F44336"
                chart:chart_axisColor="@color/icons"
                chart:chart_labelColor="@color/icons"
                chart:chart_axisBorderSpacing="0dp" />

        <com.db.chart.view.LineChartView
            xmlns:chart="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linechart2"
            android:layout_below="@id/linechart"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#E91E63"
            chart:chart_axisColor="@color/icons"
            chart:chart_labelColor="@color/icons"
            chart:chart_axisBorderSpacing="0dp" />

        <com.db.chart.view.LineChartView
            xmlns:chart="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linechart3"
            android:layout_below="@id/linechart2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#9C27B0"
            chart:chart_axisColor="@color/icons"
            chart:chart_labelColor="@color/icons"
            chart:chart_axisBorderSpacing="0dp" />

        <com.db.chart.view.LineChartView
            xmlns:chart="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linechart4"
            android:layout_below="@id/linechart3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#673AB7"
            chart:chart_axisColor="@color/icons"
            chart:chart_labelColor="@color/icons"
            chart:chart_axisBorderSpacing="0dp" />

        <com.db.chart.view.LineChartView
            xmlns:chart="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linechart5"
            android:layout_below="@id/linechart4"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="#3F51B5"
            chart:chart_axisColor="@color/icons"
            chart:chart_labelColor="@color/icons"
            chart:chart_axisBorderSpacing="0dp" />


    </RelativeLayout>
</ScrollView>